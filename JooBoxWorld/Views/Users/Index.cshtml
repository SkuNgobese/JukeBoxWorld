@model IEnumerable<JooBoxWorld.Models.ApplicationUser>

@{
    ViewData["Title"] = "Users";
}
<article class="content items-list-page">
    <div class="col-md-12">
        <div class="card">
            <div class="container-fluid card-body">
                <table class="table table-hover table-bordered" id="table_id" style="width: 100%">
                    <thead>
                        <tr>
                            <th>
                                Full Name
                            </th>
                            <th>
                                Username
                            </th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.FullName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.UserName)
                                </td>
                                <td>
                                    <form asp-route-id="@item.Id" asp-action="Delete" onclick="return confirm('Are you sure you want to delete this user?')">
                                        <button type="submit" class="btn btn-danger icon-btn fa fa-trash" style="padding:1px">
                                            Delete
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</article>
<script src="~/DataTables/jquery-3.4.1.js"></script>
<link href="~/DataTables/DataTables-1.10.18/css/dataTables.bootstrap4.min.css" rel="stylesheet" />
<link href="~/DataTables/datatables.min.css" rel="stylesheet" type="text/css" />
<script src="~/DataTables/datatables.min.js" type="text/javascript"></script>
<!-- icon library -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
<script type="text/javascript">
    $('#table_id').DataTable({
    });
    responsive: true
</script>

